@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matrix.inc</title>
    <link rel="stylesheet" href="site.css" />
</head>
<body>
    <div class="container">
        <h1>Matrix.inc</h1>

        <div class="buttons">
            <a href="index.cshtml" class="producten">producten</a>
            <div class="gegevens">
                <a asp-page="/Index2" class="inloggen">inloggen</a>
                <a asp-page="/Index3" class="registreren">registreren</a>
                <a asp-page="/Index1" class="winkelmandje">🛒 Winkelmandje</a>


            </div>
        </div>
        <hr />

        <div class="product-grid">
            @foreach (var product in Model.Products)
            {
                <div class="product-card">
                    <img src="@product.Id" alt="@product.Name" />
                    <h1>@product.Name</h1>
                    <p>Prijs = @product.Price.ToString("0.00")</p>
                    <div class="beschrijving">
                        <p>Beschrijving: @product.Description</p>
                    </div>

                    
                </div>
            }

                </div>
            }
        </div>

        <footer class="onderaan">
            <div class="footer">
                <h2>Over ons</h2>
            </div>
        </footer>
    </div>
<script src="site.js"></script>
</body>
</html>


<table class="table">
    <thead>
        <tr>
            <th>Klant</th>
            <th>Aantal Orders</th>
        </tr>
    </thead>
    @foreach (var c in Model.Customers)
    {        
        <tr>
            <td>@Html.DisplayName(c.Name)</td>
            <td>@Html.DisplayName(c.Orders.Count.ToString())</td>           
        </tr>
    }
</table>