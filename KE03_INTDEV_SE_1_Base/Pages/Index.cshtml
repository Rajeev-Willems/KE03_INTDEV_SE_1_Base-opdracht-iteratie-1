@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Matrix.inc</title>
    <link rel="stylesheet" href="site.css" />
</head>
<body>
    <div class="container">
        <h1>Matrix.inc</h1>

        <div class="buttons">
			<a asp-page="/Index`5" class="inloggen">gegevens</a>
            <a asp-page="/index" class="registreren"> producten</a>
            <div class="gegevens">
                <a asp-page="/Index2" class="inloggen">inloggen</a>
                <a asp-page="/Index3" class="registreren">registreren</a>
                <a asp-page="/Index1" class="winkelmandje">🛒 Winkelmandje</a>


            </div>
        </div>
        <hr />

        <div class="parts">
            @foreach (var parts in Model.Parts)
            {
                <div class="product-card">
                    <img src="@parts.Photo" alt="@parts.Name" />
                    
                    <h1>@parts.Name</h1>
                    <p>Prijs = @parts.Price.ToString("0.00")</p>
                    <div class="beschrijving">
                        <p>Beschrijving: @parts.Description</p>
                        <button onclick="addToCart(@parts.Id)">🛒 Toevoegen aan winkelwagen</button>



                    </div>

                    
                </div>
            }

                </div>
            }
        </div>

        <footer class="onderaan">
            <div class="footer">
                <h2>Over ons</h2>
            </div>
        </footer>
    </div>
    <script src="~/site.js"></script>

</body>
</html>


